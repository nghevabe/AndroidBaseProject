<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_radius_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp25"
        android:gravity="center"
        android:text="@string/alert_thong_bao"
        android:textColor="@color/ses_black"
        android:textSize="@dimen/sp16" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginTop="@dimen/dp24"
        android:layout_marginRight="@dimen/dp16"
        android:gravity="center_horizontal"
        android:lineHeight="@dimen/sp22"
        android:paddingBottom="@dimen/dp24"
        android:lineSpacingExtra="@dimen/sp8"
        android:textColor="@color/ses_black"
        android:textSize="@dimen/sp16" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/bt_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp24"
            android:layout_weight="1"
            android:background="@drawable/bg_button_blue_8_2"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="@dimen/dp13"
            android:paddingRight="10dp"
            android:paddingBottom="@dimen/dp13"
            android:text="@string/cancel"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/tvSpace"
            android:layout_width="@dimen/dp16"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bt_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp24"
            android:layout_weight="1"
            android:background="@drawable/bg_button_blue_8"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp13"
            android:paddingRight="@dimen/dp10"
            android:paddingBottom="@dimen/dp13"
            android:text="@string/alert_dong_y"
            android:textColor="@color/ses_white"
            android:textSize="@dimen/sp16" />
    </LinearLayout>


</LinearLayout>